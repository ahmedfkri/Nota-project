<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoTa" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondaryLight</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyBtn">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorSecondaryLight</item>
        <item name="cornerRadius">20dp</item>
    </style>
    <style name="MyBtn2">
        <item name="backgroundTint">#EC0B43</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorSecondaryLight</item>
        <item name="cornerRadius">20dp</item>
    </style>
</resources>